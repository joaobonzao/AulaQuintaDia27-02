package projetoexemplo2;
  /* 
      Autor: João Pedro C. Reichert
    
      Projeto: 
        Crie um programa que leia o nome de um paciente, o peso e a sua altura, o programa deverar caucular o IMC do paciente
       e depois devera mostrar o resultado na tela. 
      
      Data: 27/02/2025 
    */
    
public class ProjetoExemplo2 {
  
    public static void main(String[] args) {
        
     // Declarar as váriaveis
          String nome;
          double peso, altura, IMC;
     // Entrada de dados
          nome = "Renan Réne";
          peso = 470.9;
          altura = 1.80;
     // Processamento 
          IMC = peso / Math.pow(altura,2);
     // Saida de dados
          System.out.println("Nome:" + " " + nome );
          System.out.println("Peso: " + peso);
          System.out.println("Altura: " + altura);
          System.out.println("IMC: " + IMC);
         
        
    }
    
}
